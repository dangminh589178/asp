
@{
  ViewBag.Title = "Quản lý nhà vận chuyển";
}
<!--form tìm kiếm -->
<div class="container-fluid">
  <form id="formSearchInput">
    <div class="input-group">
      <input name="searchValue" type="text" class="form-control" placeholder="Nhập tên nhà vận chuyển ..." value="">
      <div class="input-group-btn">
        <button class="btn btn-primary" type="submit">
          <i class="glyphicon glyphicon-search"></i> Tìm kiếm
        </button>
      </div>
    </div>
  </form>
</div>
<!--danh sách nhà vận chuyển -->
<div id="listShippers" class="container-fluid">
</div>


@section scripts {
  <script>
    function getShippers(page) {
      var searchCondition = $("#formSearchInput").serializeArray();
      searchCondition.push({ name: "page", value: page });
      $.ajax({
        url: "/Shippers/List",
        type: "POST",
        data: searchCondition,
        success: function (data) {
          $("#listShippers").empty();
          $("#listShippers").html(data);
        }
      });
    }

    $(document).ready(function () {
      getShippers(1);
      $("#formSearchInput").submit(function (e) {
        e.preventDefault();
        getShippers(1);
      });
    });
  </script>
}

