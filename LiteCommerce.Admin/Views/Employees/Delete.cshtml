@model LiteCommerce.DomainModels.Employee
@{
  ViewBag.Title = "Xác nhận xóa nhân viên";
}
<div class="box box-primary">
  <!-- form start -->
  <form class="form-horizontal" method="post" action="~/Employees/Delete/@Model.EmployeeID">
    <div class="box-body">
      <div class="media">
        <div class="media-body">
          <div class="form-group">
            @Html.HiddenFor(m => m.EmployeeID)
            <label class="control-label col-sm-2">Họ:</label>
            <div class="col-sm-4">
              <p class="form-control-static">@Model.FirstName</p>
            </div>
            <label class="control-label col-sm-2">Tên:</label>
            <div class="col-sm-4">
              <p class="form-control-static">@Model.LastName</p>
            </div>
            <label class="control-label col-sm-2">Ngày sinh:</label>
            <div class="col-sm-10">
              <p class="form-control-static">@Model.BirthDate</p>
            </div>
            <label class="control-label col-sm-2">Email:</label>
            <div class="col-sm-10">
              <p class="form-control-static">@Model.Email</p>
            </div>
            <label class="control-label col-sm-2">Ghi chú:</label>
            <div class="col-sm-10">
              <p class="form-control-static">@Model.Notes</p>
            </div>
          </div>
        </div>
        <div class="media-right">
          <label class="control-label col-sm-2">Ảnh</label>
          <img src="@Model.Photo" style="height:100px; width:90px;" alt="User Image">
        </div>
      </div>

    </div>
    <!-- /.box-body -->
    <div class="box-footer">
      <div class="row">
        <div class="col-lg-offset-2 col-sm-10">
          <p class="text-danger">Bạn có chắc muốn xóa nhân viên này?</p>
        </div>
        <div class="col-lg-offset-2 col-sm-10">
          <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Đồng ý</button>
          <a href="~/Employees/Index" class="btn btn-warning">Bỏ qua</a>
        </div>
      </div>
    </div>
  </form>
</div>
